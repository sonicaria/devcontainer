{
	"[css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.tabSize": 2
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.tabSize": 2
	},
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.tabSize": 2
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.tabSize": 2
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.tabSize": 2
	},
	"[markdown]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.rulers": [80]
	},
	// File-format specific
	"[rust]": {
		"editor.tabSize": 4
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.tabSize": 2
	},
	"[vue]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.tabSize": 2
	},
	"cSpell.words": [
    "Comportly",
    "Sonicaria",
    "Yeehaw",
    "Conthir"
  ],
	// Editor
	"editor.defaultColorDecorators": true,
	"editor.detectIndentation": false, // Overrides tabSize with currently configured
	"editor.formatOnSave": true,

	"editor.linkedEditing": true, // eg. HTML changes
	// Extension Specific

	"evenBetterToml.formatter.alignComments": true,
	"evenBetterToml.formatter.alignEntries": true,
	"evenBetterToml.formatter.arrayTrailingComma": false,
	"evenBetterToml.formatter.reorderKeys": true,

	"files.associations": {
		"*.nomad": "hcl",
		"*.rs": "rust",
		"*.webc": "html"
	},
	// Handy
	// Autosave + format automatically
	"files.autoSave": "onFocusChange",
	// Language-Specific
	"html.format.wrapAttributes": "force-expand-multiline",
	"rust-analyzer.check.command": "clippy",

	"rust-analyzer.imports.preferNoStd": true,

	// Language-specific
	"vue.inlayHints.inlineHandlerLeading": true,
	"vue.inlayHints.missingProps": true,
	"vue.inlayHints.optionsWrapper": true,
	"vue.server.fullCompletionList": true
}
