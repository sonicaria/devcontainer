{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"files": {
		"ignore": ["dist"],
		"include": ["./*.{js,ts,jsx,tsx,json,jsonc}"]
	},
	"formatter": {
		"indentStyle": "tab",
		"indentWidth": 2
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true
		}
	},
	"organizeImports": {
		"enabled": true
	}
}
